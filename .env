# ============================================
# ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ
# ============================================

# ============================================
# БАЗА ДАННЫХ
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=crypto_prices
DB_PORT=5432
DB_USER=postgres
DB_HOST=postgres
DB_NAME=crypto_prices
DB_PASSWORD=postgres
DB_DRIVER=postgresql+asyncpg

# ============================================
# REDIS
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# CELERY
# ============================================
SCRIPT_LOCATION=src.celery_app
FETCH_INTERVAL=60
FETCH_SOFT_TIME_LIMIT=55
FETCH_RETRY_COUNTDOWN=60
FETCH_MAX_RETRIES=3

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_METHODS=["GET"]
ALLOWED_HEADERS=["*"]
ALLOW_CREDENTIALS=True

# ============================================
# СЕРВЕР
# ============================================
PYTHONPATH=/app
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
TESTING=False
DEBUG=false

# ============================================
# API ДОКУМЕНТАЦИЯ
# ============================================
API_DOCS_ENABLED=true
API_TITLE="Crypto Price Tracker API"
API_VERSION="1.0.0"
API_DESCRIPTION="API для получения данных о ценах криптовалют с биржи Deribit"

# ============================================
# ЛОГИРОВАНИЕ
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_EXCEPTION_LOGGING=true
ENABLE_BUSINESS_LOGGING=true

# ============================================
# DERIBIT API
# ============================================
DERIBIT_API_URL=https://www.deribit.com/api/v2/public