# ============================================
# БАЗА ДАННЫХ (ОБЩИЕ НАСТРОЙКИ)
# ============================================
DB_USER=postgres
DB_HOST=postgres
DB_NAME=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# ============================================
# СЕРВЕР
# ============================================
APP_HOST=0.0.0.0
APP_PORT=8000

# ============================================
# ОКРУЖЕНИЕ И РЕЖИМ ОТЛАДКИ
# ============================================
TESTING=False
DEBUG=True

# ============================================
# API ДОКУМЕНТАЦИЯ
# ============================================
API_DOCS_ENABLED=true
API_TITLE="Crypto Price Tracker API"
API_VERSION="1.0.0"
API_DESCRIPTION="API для получения данных о ценах криптовалют с биржи Deribit"

# ============================================
# ЛОГИРОВАНИЕ
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true
ENABLE_REQUEST_LOGGING=True
ENABLE_EXCEPTION_LOGGING=True
ENABLE_BUSINESS_LOGGING=True

# ============================================
# REDIS (for Celery broker)
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
# Celery
FETCH_INTERVAL=60
# Deribit API
DERIBIT_API_URL=https://www.deribit.com/api/v2/public/get_index_price
