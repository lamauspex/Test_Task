# ============================================
# ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ
# ============================================
# Скопируйте этот файл в .env и заполните значения

# ============================================
# БАЗА ДАННЫХ
# ============================================
DB_PORT=5432
DB_USER=postgres
DB_HOST=postgres
DB_NAME=crypto_prices
DB_PASSWORD=postgres

# ============================================
# СЕРВЕР
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# ОКРУЖЕНИЕ
# ============================================
TESTING=False
DEBUG=True

# ============================================
# API ДОКУМЕНТАЦИЯ
# ============================================
API_DOCS_ENABLED=true
API_TITLE="Crypto Price Tracker API"
API_VERSION="1.0.0
API_DESCRIPTION="API для получения данных о ценах криптовалют с биржи Deribit"

# ============================================
# ЛОГИРОВАНИЕ
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true
ENABLE_REQUEST_LOGGING=True
ENABLE_EXCEPTION_LOGGING=True
ENABLE_BUSINESS_LOGGING=True

# ============================================
# CELERY
# ============================================
FETCH_INTERVAL=60

# ============================================
# DERIBIT API
# Публичный API не требует аутентификации
# ============================================
DERIBIT_API_URL=https://www.deribit.com/api/v2